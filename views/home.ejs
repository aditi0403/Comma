<%- include('partials/header') -%>

<!-- Typed.js -->
<script src="https://cdn.jsdelivr.net/npm/typed.js@2.1.0/dist/typed.umd.min.js"></script>

<style>
  .bg-wrapper {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .bg-image {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-image: url('https://i.pinimg.com/736x/f3/01/b7/f301b78642349b752d88b318081a6570.jpg') !important;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: -2;
    
  }

  .bg-overlay {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background-color: rgba(255, 255, 255. 0.8) !important;
    z-index: -1;
  }

  main {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem 1rem;
  }

  .content-box {
    background-color: rgba(255, 255, 255, 0.7);
    padding: 2.5rem;
    border-radius: 1rem;
    text-align: center;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.25);
    min-width: 320px;
    max-width: 90vw;
  }

  .btn-custom {
    min-width: 120px;
  }

  .big-comma {
    font-size: 3rem;
    vertical-align: middle;
    line-height: 1;
    display: inline-block;
  }
</style>


  <div class="bg-wrapper">
  <div class="bg-image"></div>
  <div class="bg-overlay"></div>

  <main>
    <div class="content-box">
      <h2 class="mb-4">
        <span id="typed-text"></span>
      </h2>

      <% if (user) { %>
        <p class="lead mb-0">Welcome, <strong><%= user.username %></strong></p>
      <% } else { %>
        <div class="d-flex gap-3 justify-content-center mt-3">
          <a href="/auth/login" class="btn btn-dark btn-custom">Login</a>
          <a href="/auth/register" class="btn btn-outline-dark btn-custom">Register</a>
        </div>
      <% } %>
    </div>
  </main>

</div>
</body>

<%- include('partials/footer') -%>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const typed = new Typed("#typed-text", {
      strings: [
        "you've entered <strong>Comma</strong>",
        "you've entered <span class='big-comma'>,</span>",
      ],
      typeSpeed: 50,
      backSpeed: 30,
      backDelay: 1200,
      showCursor: false,
      smartBackspace: false,
      loop: false
    });
  });
</script>
